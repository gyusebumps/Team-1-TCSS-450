<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userSetting.UserSettingFragment">

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="125dp"
        android:text="TextView"
        android:textColor="@color/color_on_secondary"
        app:layout_constraintStart_toEndOf="@+id/imageView_name"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user" />

    <Button
        android:id="@+id/button_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="152dp"
        android:text="Change Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_user_email" />

    <ImageView
        android:id="@+id/imageView_name"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_person_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user" />

    <ImageView
        android:id="@+id/imageView_email"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_person_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_name" />

    <TextView
        android:id="@+id/textView_user_email"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="65dp"
        android:text="TextView"
        android:textColor="@color/color_on_secondary"
        app:layout_constraintStart_toEndOf="@+id/imageView_email"
        app:layout_constraintTop_toBottomOf="@+id/textView_username" />

    <ImageView
        android:id="@+id/imageView_user"
        android:layout_width="136dp"
        android:layout_height="129dp"
        android:layout_marginTop="51dp"
        android:src="@drawable/ic_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

